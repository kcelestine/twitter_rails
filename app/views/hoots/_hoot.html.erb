<div class="hoot" id="<%= dom_id(hoot) %>">
  <p class="content">
    <%= hoot.content %>
  </p>
  <p class="author">
    <%= hoot.author %>
  </p>
  <p class="links">
    <%= link_to 'edit', edit_hoot_path(hoot), remote: true %> |
    <%= link_to 'delete', hoot_path(hoot), remote: true, method: :delete %>
  </p>
</div>
